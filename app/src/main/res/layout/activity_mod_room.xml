<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/roboto_black"
            android:text="Admin Habitaci贸n"
            android:textColor="@color/verde"
            android:textAlignment="center"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingEnd="70dp"
            android:paddingStart="90dp"
            android:text="Consultar Habitaci贸n"
            android:padding="12dp"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/select"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:paddingEnd="70dp"
            android:paddingStart="90dp"
            android:text="Editar Habitaci贸n"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/update"


            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:paddingEnd="70dp"
            android:paddingStart="90dp"
            android:padding="12dp"
            android:text="Eliminar Habitaci贸n"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/delete"
            />

        <Button
            android:id="@+id/btn_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:paddingEnd="70dp"
            android:paddingStart="90dp"
            android:text="Volver"
            android:padding="12dp"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/exit"
            />




    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>